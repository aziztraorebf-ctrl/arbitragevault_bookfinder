# ArbitrageVault BookFinder - Environment Configuration
# Copy to .env and update values for your environment

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
DATABASE_URL=postgresql://user:password@localhost:5432/arbitragevault
ECHO_SQL=false
POOL_SIZE=10
MAX_OVERFLOW=20

# ============================================================================
# APPLICATION CONFIGURATION  
# ============================================================================
APP_NAME="ArbitrageVault BookFinder"
VERSION=1.2.5
DEBUG=false
SECRET_KEY=your-super-secret-key-change-in-production

# Pagination settings
DEFAULT_PAGE_SIZE=50
MAX_PAGE_SIZE=1000

# Business logic thresholds
DEFAULT_ROI_THRESHOLD=20.0
DEFAULT_VELOCITY_THRESHOLD=50.0
DEFAULT_PROFIT_THRESHOLD=10.0

# ============================================================================
# EXTERNAL API KEYS
# ============================================================================
KEEPA_API_KEY=your_keepa_api_key_here
OPENAI_API_KEY=your_openai_api_key_here
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# ============================================================================
# DEVELOPMENT SETTINGS
# ============================================================================
# Uncomment for development
# DEBUG=true
# ECHO_SQL=true
# DATABASE_URL=sqlite:///./arbitragevault_dev.db
